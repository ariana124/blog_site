<%- include("partials/header") -%>

    <h1>Home</h1>

    <p><%= homeContent %></p>

    <% totalPosts.forEach(function(post) { %>
        <div>
            <h3><%= post.title %></h3>

        <% if (post.content.length > 135) { %>
            <p>
                <%= post.content.substring(0, 135) + " ..." %>
                <a href="/post/<%= post.title %>">Read More</a>
            </p>
        <% } else { %>
            <p><%= post.content %></p>
        <% } %>
            
        </div>
    <% }); %>

<%- include("partials/footer") -%>
