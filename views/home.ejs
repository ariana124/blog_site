<%- include("partials/header") -%>

    <h1>Home</h1>

    <p><%= homeContent %></p>

    <% totalPosts.forEach(function(post) { %>
        <div>
            <h3><%= post.title %></h3>

        <% if (post.content.length > 150) { %>
            <p><%= post.content.substring(0, 150) + " ..." %></p>
        <% } else { %>
            <p><%= post.content %></p>
        <% } %>
            
        </div>
    <% }); %>

